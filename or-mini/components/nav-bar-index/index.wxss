.nav-bar-wrapper{
	position: fixed;
	top: 0;
	z-index: 999999999;
	width: 100%;
	/* background-color:rgba(0,0,0,0.5); */
}
.nav-bar{
	display: flex;
	flex-direction: row;
	align-items: center;
	color: #ffffff;
	margin-bottom: 16rpx;
}
.logo-image{
	width: 100rpx;
	margin-left: 20rpx;
}
.logo-title{
	display: flex;
	flex-direction: column;
	align-items: center;
}
.big{
	font-size: 34rpx;
	font-weight: 600;
}
.small{
	font-size: 16rpx;
}
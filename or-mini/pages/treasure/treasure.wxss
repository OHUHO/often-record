/* pages/treasure/treasure.wxss */
.header{
    height: 300rpx;
    position: relative;
}
.page-title{
    color: #fff;
    position: absolute;
    top: 48%;
    left: 44rpx;
    display: flex;
    flex-direction: column;
}
.page-title-big{
    font-size: 44rpx;
    font-weight: 700;
}
.page-title-small{
    font-size: 28rpx;
    font-weight: 500;
    color: rgb(183, 181, 181);
}

.card-wrapper{
    /* background-color: #fff; */
    margin: 0 24rpx;
    padding-bottom: 244rpx;
}
.card{
    background-color: rgba(43, 43, 43,0.5);
    height: 280rpx;
    margin: 30rpx 0;
    border-radius: 20rpx;
    color: #fff;
}
.card-image{
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}
.card-text{
    display: flex;
    flex-direction: column;
    position: relative;
    top: -220rpx;
    left: 44rpx;
}
.card-text-big{
    font-size: 36rpx;
    font-weight: 600;
}
.card-text-small{
    font-size: 30rpx;
    color: rgb(206, 203, 203);
}


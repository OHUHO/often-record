/* pages/choiceness/choiceness.wxss */
.choiceness-wrapper{
    display: flex;
    flex-direction: column;
    /* background-color: #fff; */
    /* height: 400rpx; */
    margin: 180rpx 24rpx 0rpx 24rpx;
}

/* --------------搜索框-------------- */
.search-box{
    height: 70rpx;
    border-radius: 40rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border: 1rpx solid rgba(63, 62, 62,0.6);
    background-color: rgba(63, 62, 62,0.5);
}
.search-icon{
    width: 40rpx;
    height: 40rpx;
    margin: 0 20rpx 0 36rpx;
}
.placeholder{
    font-size: 32rpx;
    font-weight: 600;
    color: rgb(83, 82, 82,0.9);
}

/* -----------------卡片------------------- */
.card{
    height: 220rpx;
    background-color: aliceblue;
    border-radius: 14rpx;
    margin: 30rpx 0;
    display: flex;
    align-items: center;
	justify-content: space-between;
	background-image: url("https://www.transparenttextures.com/patterns/cubes.png"),
	/* linear-gradient(
        to right top,
        #cf4af3,
        #e73bd7,
        #f631bc,
        #fd31a2,
        #ff3a8b,
        #ff4b78,
        #ff5e68,
        #ff705c,
        #ff8c51,
        #ffaa49,
        #ffc848,
        #ffe652
	) */
	linear-gradient(45deg,#88a5a8,#c79acc,#e9c5a4)
    ;
}
.card-text{
    width: 100%;
    height: 200rpx;
    margin: 24rpx;
    /* background-color: aliceblue; */
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.card-title{
    font: 30rpx;
    font-weight: 600;
    margin-bottom: 16rpx;
}
.card-describe{
    font-size: 28rpx;
    font-weight: 600rpx;
    color: #fff;

    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

/* --------------瀑布流----------------- */
.main {
    text-align: justify;
    /* background-color: red; */
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }
  
  .left, 
  .right {
    display: inline-block;
    vertical-align: top;
    width: 48%;
  }
  
  .item {
    width: 100%;
    background-color: rgba(63, 62, 62,0.6);
    margin-bottom: 20rpx;
    display: inline-block;
    border-radius: 20rpx;
    overflow: hidden;
  }
  
  .cover {
    width: 100%
  }
  
  .title {
    font-size: 30rpx;
    font-weight: 600;
    color: rgb(184, 181, 181);
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin: 20rpx 15rpx;
  }
  .user {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    font-weight: 600;
    color: rgb(137, 136, 136);
    margin: 0rpx 15rpx 20rpx 15rpx;

  }
  .portrait {
    width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
  }
  .name {
    flex: 1;
    margin-left: 18rpx;
    margin-right: 20rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
  }
  
  .heart {
    height: 26rpx;
    margin-right: 8rpx;
    display: flex;
    align-items: center;
  }
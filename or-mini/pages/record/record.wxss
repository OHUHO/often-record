/* pages/record/record.wxss */

.header{
    height: 350rpx;
    position: relative;
}
.background-image{
    width: 100%;
    height: 100%;
    opacity: 0.6;
}
.page-title{
    color: #fff;
    position: absolute;
    top: 42%;
    left: 44rpx;
    display: flex;
    flex-direction: column;
}
.page-title-big{
    font-size: 44rpx;
    font-weight: 700;
}
.page-title-small{
    font-size: 28rpx;
    font-weight: 500;
    color: rgb(183, 181, 181);
}

/* -------------------------------------- */
.step-wrapper{
    /* background-color: #ffffff; */
    /* background-color: rebeccapurple; */
    margin: 54rpx 24rpx 0 30rpx;
    color: #ffffff;
    padding-bottom: 244rpx;
}
.step{
    min-height: 200rpx;
    width: 100%;
    border-left: 3rpx solid rgb(82, 81, 81);
}

.circle{
    width: 14rpx;
    height: 14rpx;
    border-radius: 50%;
    background-color: #5cc7b9;
    position: relative;
    top: -10rpx;
    left: -9rpx;
}
.step:nth-child(1) .circle{
    background-color: red;
}

.row{
    position: relative;
    top: -34rpx;
    margin-left: 20rpx;
    /* background-color: rgb(158, 228, 222); */
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
.time-info{
    display: flex;
    flex-direction: column;
}
.time{
    font-size: 32rpx;
}
.describe{
    font-size: 24rpx;
    color: rgb(183, 181, 181);
    margin-top: 4rpx;
}
.look-more{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60rpx;
    padding: 12rpx 14rpx;
    background-color: rgba(63, 62, 62,0.6);
    border-radius: 20rpx 0 0 20rpx;
}
.more-image{
    width: 36rpx;
    height: 36rpx;
}

.step-main{
    /* background-color: rgb(236, 136, 136); */
    padding: 0 0 60rpx 20rpx;
    color: rgb(144, 142, 142);
    font-size: 30rpx;
}
.step:last-child .step-main{
    padding-bottom: 0;
}

/* ---------滚动区域----------- */
.scroll-view{
    /* background-color: blue; */
    height: 300rpx;
    width: 100%;
    white-space: nowrap;
}
/* 隐藏 scroll-view 的滚动条 */
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}

.card{
    height: 100%;
    width: 280rpx;
    position: relative;
    display: inline-block;
    align-items: center;
    background-color: rgba(63, 62, 62,0.6);
    margin-right: 20rpx;
    border-radius: 20rpx;
    /* background-color: rgb(220, 120, 230); */

}
.card:last-child{
    margin-right: 0;
}

.card-item{
    height: 100%;
    width: 100%;
    /* margin: 0 12rpx; */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    /* background-color: yellow; */
}
.card-image{
    width: 256rpx;
    /* height: 200rpx; */
    margin: 14rpx 0;
    border-radius: 10rpx 10rpx 0 0;
}
.card-title{
    width: 256rpx;
    height: 360rpx;
    margin: 4rpx 0 14rpx 0;
    display: flex;
    /* background-color: red; */
    font-size: 30rpx;
    font-weight: 600;
    color: rgb(146, 144, 144);
    /* 换行 */
    white-space:normal;

    line-height: 38rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}
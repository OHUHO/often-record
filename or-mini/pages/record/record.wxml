<!--pages/record/record.wxml-->

<view class="header">
    <image class="background-image" src="/assets/background-record.jpg" mode="aspectFill"></image>
    <view class="page-title">
        <text class="page-title-big">时间刻痕</text>
        <text class="page-title-small">记录线◽ 记录每一刻</text>
    </view>
</view>

<view class="step-wrapper">
    <view class="step" wx:for="{{list}}" wx:key="index">
        <view class="circle"></view>
        <view class="row">
            <view class="time-info">
                <text class="time">{{item.time}}</text>
                <text class="describe">{{item.describe}}</text>
            </view>
            <view class="look-more" data-articles="{{item}}" bindtap="handleLookMore">
                <image class="more-image" src="/assets/look-more.png"></image>
            </view>
        </view>
        <view class="step-main">
            <scroll-view class="scroll-view" scroll-x>
                <view class="card" wx:for="{{item.content}}" wx:key="index" wx:for-item="content">
                    <view class="card-item" data-article="{{content}}" bindtap="handleClick">
                        <image class="card-image" wx:if="{{content.imageUrl == ''}}" src="/assets/not-image.png" mode="aspectFit"></image>
                        <image class="card-image" wx:else src="{{content.imageUrl}}" mode="aspectFill"></image>
                        <view class="card-title">{{content.title}}</view>
                    </view>
                </view>
            </scroll-view>
        </view>
    </view>
</view>


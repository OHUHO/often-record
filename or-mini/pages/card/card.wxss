/* pages/card/card.wxss */
page{
    display: flex;
    /* overflow: hidden; */
    background-size: 100% 100%;
}
.background-image{
    height: 100%;
    width: 100%;
    position: absolute;
    z-index: -1;
    left: 0;
    bottom: 0;
    opacity: 0.1;
}

.card-wrapper{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;

    margin: 180rpx 24rpx 0rpx 24rpx;
}

/* 隐藏滑动条 */
scroll-view ::-webkit-scrollbar {
    display:none;
    width:0;
    height:0;
    color:transparent;
}

.card{
    background-color: rgba(63, 62, 62,0.4);
    height: 1200rpx;
    width: 620rpx;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    padding: 20rpx;
}
.card-image{
    width: 100%;
    height: 600rpx;
    border-radius: 20rpx 20rpx 0 0;
}
.not-image{
    width: 616rpx;
    height: 600rpx;
    border-radius: 20rpx 20rpx 0 0;
    border: 2rpx solid rgb(93, 93, 93);
}
.card-info{
    display: flex;
    flex-direction: column;
    margin-top: 40rpx;
}
.author{
    font-size: 30rpx;
    font-weight: 600;
    color: rgb(134, 133, 133);
}
.title{
    font-size: 40rpx;
    font-weight: 700;
    margin: 20rpx 0;
}
.describe{
    font-size: 34rpx;
    font-weight: 500;
    color: rgb(134, 133, 133);
}


/*  */
.options{
    /* background-color: rgba(63, 62, 62,0.9); */
    width: 700rpx;
    margin-top: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    /* background-color: red; */
}
.option{
    width: 33.3333%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.option-image{
    width: 66rpx;
    height: 66rpx;
}
.share-btn{
    background-color: #000000;
}
.share-btn:hover{
    border: none;
}


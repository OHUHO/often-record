<!--pages/chooseInfo/chooseInfo.wxml-->
<view class="verify">
	<view class="verify-main">
		<view class="title">您还未授权</view>
		<view class="desc">请设置头像和昵称</view>

		<view class="mid">
			<button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
				<image class="avatar" src="{{avatarUrl}}"></image>
			</button> 
			<input type="nickname" class="weui-input" placeholder="请输入您的昵称" bindinput="handleInput" value="{{nickname}}"/>
		</view>

		<button class="btn ok" bindtap="save">保存</button>
		<button class="btn cancel" bindtap="cancel">取消</button>
	</view>
</view>

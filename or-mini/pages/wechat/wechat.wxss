/* pages/wechat/wechat.wxss */
page{
    display: flex;
    overflow: hidden;
    background-size: 100% 100%;
    color: #fff;
}
.background-image{
    height: 100%;
    width: 100%;
    position: absolute;
    z-index: -1;
    left: 0;
    bottom: 0;
}

.main{
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-top: 360rpx;
    align-items: center;
    justify-content: center;
}
.card-wrapper{
    width: 540rpx;
    height: 540rpx;
    background-color: rgba(63, 62, 62,0.8);
    border-radius: 20rpx;
    padding: 26rpx;
}
.card{
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}
.describe{
    font-size: 34rpx;
    font-weight: 600;
    color: rgba(235, 233, 233,0.6);
    line-height: 100rpx;
}
/* pages/search/search.wxss */
.search-wrapper {
    display: flex;
    flex-direction: column;
    margin: 180rpx 24rpx 0rpx 24rpx;

}

.search-box {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.input-wrapper {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 70rpx;
    width: 84%;
    border-radius: 40rpx;
    border: 1rpx solid rgba(63, 62, 62, 0.6);
    background-color: rgba(63, 62, 62, 0.5);
    /* background-color: white; */
}

.search-icon {
    width: 40rpx;
    height: 40rpx;
    margin-left: 36rpx;
}

input {
    height: 100%;
    width: 76%;
    padding: 0 20rpx;
    font-size: 28rpx;
}

.place-holder {
    font-size: 32rpx;
    font-weight: 600;
    color: rgb(83, 82, 82);
}

.cancel {
    font-size: 34rpx;
    font-weight: 600;
    color: #999;
}

/* ------------内容区域----------- */

.common {
    padding: 0;
}

.title {
    font-size: 34rpx;
    font-weight: 600;
    color: rgb(204, 203, 203);
    margin: 30rpx 0;
}

.search {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    /* background-color: red; */
}

.item {
    font-size: 30rpx;
    height: 49rpx;
    line-height: 49rpx;
    padding: 0 20rpx;
    background: rgba(63, 62, 62, 0.6);
    border-radius: 24rpx;
    justify-content: center;
    margin: 20rpx 0;
    margin-right: 20rpx;
    white-space: pre;
    color: #999;
}

.color {
    /* color: #5cc7b9; */
    color: #94cec6;
}

.history {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.clear {
    color: #999;
    font-size: 25rpx;
}
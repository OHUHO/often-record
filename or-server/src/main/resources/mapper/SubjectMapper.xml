<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.record.mapper.SubjectMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.record.entity.Subject">
        <id column="subject_id" property="subjectId" />
        <result column="name" property="name" />
        <result column="cover" property="cover" />
        <result column="creator_id" property="creatorId" />
        <result column="create_time" property="createTime" />
        <result column="remark" property="remark" />
        <result column="status" property="status" />
        <result column="is_delete" property="isDelete" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        subject_id, name, cover, creator_id, create_time, remark, status, is_delete
    </sql>

</mapper>
